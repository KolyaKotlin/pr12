<Window x:Class="MarkForTests.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Оценка за экзамен" Height="450" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Задание 1 (макс. 10 баллов)" Margin="5"/>
            <TextBox x:Name="Task1TextBox" Margin="5" MaxLength="2" HorizontalAlignment="Center"/>

            <TextBlock Text="Задание 2 (макс. 50 баллов)" Margin="5"/>
            <TextBox x:Name="Task2TextBox" Margin="5" MaxLength="3" HorizontalAlignment="Center"/>

            <TextBlock Text="Задание 3 (макс. 30 баллов)" Margin="5"/>
            <TextBox x:Name="Task3TextBox" Margin="5" MaxLength="2" HorizontalAlignment="Center"/>

            <TextBlock Text="Задание 4 (макс. 10 баллов)" Margin="5"/>
            <TextBox x:Name="Task4TextBox" Margin="5" MaxLength="2" HorizontalAlignment="Center"/>

            <Button Content="Подсчитать" Width="100" Height="30" Margin="10" Click="CalculateButton_Click"/>

            <TextBlock x:Name="ResultTextBlock" Text="" Margin="5" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>
